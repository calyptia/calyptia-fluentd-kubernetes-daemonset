apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: calyptia-calyptia-fluentd
  namespace: kube-system
  labels:
    k8s-app: calyptia-fluentd-logging
    version: v1
spec:
  selector:
    matchLabels:
      k8s-app: calyptia-fluentd-logging
      version: v1
  template:
    metadata:
      labels:
        k8s-app: calyptia-fluentd-logging
        version: v1
    spec:
      tolerations:
      - key: node-role.kubernetes.io/master
        effect: NoSchedule
      containers:
      - name: calyptia-fluentd
        image: ghcr.io/calyptia/calyptia-fluentd-kubernetes-daemonset:v1-debian-forward
        env:
          - name:  FLUENT_FOWARD_HOST
            value: "REMOTE_ENDPOINT"
          - name:  FLUENT_FOWARD_PORT
            value: "18080"
          # - name: FLUENTD_SYSTEMD_CONF
          #   value: "disable"
          # Calyptia Authentication
          # ======================
          - name: FLUENT_CALYPTIA_MONITORING_CALYPTIA_API_KEY
            value: "YOUR_API_KEY"
<%if target == "cri-o" %>
          - name: FLUENT_CONTAINER_TAIL_PARSER_TYPE
            value: "cri"
          - name: FLUENT_CONTAINER_TAIL_PARSER_TIME_FORMAT
            value: "%Y-%m-%dT%H:%M:%S.%L%z"
<% end %>
        resources:
          limits:
            memory: 200Mi
          requests:
            cpu: 100m
            memory: 200Mi
        volumeMounts:
        - name: varlog
          mountPath: /var/log
<%if target == "minikube" %>
        - name: dockercontainerlogdirectory
          mountPath: /var/lib/docker/containers
          readOnly: true
<% else %>
        - name: dockercontainerlogdirectory
          mountPath: /var/log/pods
          readOnly: true
<% end %>
      terminationGracePeriodSeconds: 30
      volumes:
      - name: varlog
        hostPath:
          path: /var/log
<%if target == "minikube" %>
      - name: dockercontainerlogdirectory
        hostPath:
          path: /var/lib/docker/containers
<% else %>
      - name: dockercontainerlogdirectory
        hostPath:
          path: /var/log/pods
<% end %>